# Configuration d'Environnement - Cyber-Pentest
# Copier ce fichier en .env et remplir les valeurs

# ============================================================================
# API Backend
# ============================================================================
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# ============================================================================
# Database PostgreSQL
# ============================================================================
DATABASE_URL=postgresql://pentest:pentest_secure@db:5432/pentest_db
POSTGRES_USER=pentest
POSTGRES_PASSWORD=pentest_secure
POSTGRES_DB=pentest_db

# ============================================================================
# Redis
# ============================================================================
REDIS_URL=redis://:redis_secure_password@redis:6379/0

# ============================================================================
# API Keys & Secrets
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256

# ============================================================================
# Sécurité & Authentification
# ============================================================================
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:80,http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# ============================================================================
# Logging & Monitoring
# ============================================================================
LOG_LEVEL=INFO
LOKI_URL=http://loki:3100
PROMETHEUS_ENABLED=true

# ============================================================================
# Scan Configuration
# ============================================================================
NMAP_TIMEOUT=300
NMAP_ARGS=-F -T4
MAX_CONCURRENT_SCANS=5

# ============================================================================
# Notifications & Reporting
# ============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
REPORT_EMAIL_FROM=noreply@cyberpentest.local

# ============================================================================
# Docker & Containerization
# ============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_SOCKET=/var/run/docker.sock

# ============================================================================
# Features & Toggles
# ============================================================================
ENABLE_AI_REPORTS=true
ENABLE_EMAIL_REPORTS=false
ENABLE_SLACK_NOTIFICATIONS=false
